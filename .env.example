# Environment Variables Example File
# Copy this file to .env and fill in your API keys and settings
# IMPORTANT: DO NOT commit the actual .env file with real API keys to version control

# ------------------------------
# LLM API KEYS
# ------------------------------
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# DeepL
DEEPL_API_KEY=your_deepl_api_key_here

# ------------------------------
# CONFIGURATION SETTINGS
# ------------------------------
# MaroviAI Settings
DATA_STORAGE_PATH=./data
USE_DATABASE=false
DATABASE_URL=sqlite:///database/papers.db

# API Settings
DEBUG=false
LOG_LEVEL=INFO
OPENAI_DEFAULT_MODEL=gpt-4o-2024-08-06
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Advanced Settings
DEFAULT_MAX_RETRIES=3
DEFAULT_INITIAL_BACKOFF=1.0
DEFAULT_MAX_BACKOFF=10.0
DEFAULT_BACKOFF_FACTOR=2.0
DEFAULT_CACHE_SIZE=100
ENABLE_CACHE=false
DEFAULT_MAX_CONCURRENCY=5